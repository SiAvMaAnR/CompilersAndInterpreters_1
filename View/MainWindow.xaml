<Window x:Class="CompilersAndInterpreters_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompilersAndInterpreters_1" xmlns:WpfToolkit="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        mc:Ignorable="d"
        Title="CaI1" WindowStartupLocation="CenterScreen"  Height="720" Width="1280" MinHeight="600" MinWidth="900">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="Text">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Padding" Value="5,1,5,1"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Black"/>
            </Style.Setters>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Label" x:Key="Label">
            <Style.Setters>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style.Setters>
        </Style>

        <Style TargetType="StackPanel" x:Key="Panel">
            <Style.Setters>
                <Setter Property="Margin" Value="10,0,10,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>

        <Style TargetType="Button" x:Key="Button">
            <Style.Setters>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="Margin" Value="10,10,10,10"/>
                <!--<Setter Property="Background" Value="White"/>-->
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Black"/>
            </Style.Setters>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Label" x:Key="IsCorrect">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCorrect}" Value="0">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCorrect}" Value="1">
                    <Setter Property="Background" Value="#00FF00"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Content" Value="Корректно"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCorrect}" Value="2">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Content" Value="Не корректно"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
            </Style.Triggers>
            <Style.Setters>
                <Setter Property="BorderBrush" Value="Black"/>
            </Style.Setters>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                    <Setter Property="Margin" Value="10"/>

                </Style>
            </Style.Resources>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel  Style="{StaticResource Panel}">
                    <Label Content="Множество состояний" Style="{StaticResource Label}" />
                    <TextBox Text="{Binding Conditions}" Style="{StaticResource Text}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <StackPanel  Style="{StaticResource Panel}">
                    <Label Content="Алфавит" Style="{StaticResource Label}" />
                    <TextBox Text="{Binding Alphabet}" Style="{StaticResource Text}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="2">
                <StackPanel  Style="{StaticResource Panel}">
                    <Label Content="Заключительные состояния" Style="{StaticResource Label}" />
                    <TextBox Text="{Binding FinalCondition}" Style="{StaticResource Text}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="3">
                <StackPanel  Style="{StaticResource Panel}">
                    <Label Content="Цепочка" Style="{StaticResource Label}" />
                    <TextBox Text="{Binding Input}" Style="{StaticResource Text}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="4" >
                <Button Content="Построить" Margin="20,10,20,0" FontSize="24" Click="Button_Click_1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="0,20,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DataGrid CanUserSortColumns="False" MinColumnWidth="50" CanUserAddRows="False" FontSize="20" ItemsSource="{Binding DataTable.DefaultView}" AutoGenerateColumns="True"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1" MaxHeight="100px">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" MaxHeight="100px" MaxWidth="300px">
                    <Label Margin="10,0,10,0" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource IsCorrect}"/>
                </Grid>

                <Grid Grid.Column="1" MaxHeight="100px" MaxWidth="300px">
                    <Button Content="Анализ"  Style="{StaticResource Button}" Click="Button_Click_2"/>

                </Grid>

                <Grid Grid.Column="2" MaxHeight="100px" MaxWidth="300px">
                    <Button Content="Запуск" Style="{StaticResource Button}" Click="Button_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
